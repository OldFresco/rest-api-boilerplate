{
    "name": "comms-service-api",
    "version": "1.0.0",
    "apiVersion": "/v1",
    "description": "RESTful API providing central communications services",
    "main": "index.js",
    "scripts": {
        "build": "babel app -d build",
        "clean": "rm -rf build && mkdir build",
        "start": "nodemon index.js",
        "test": "NODE_ENV=test mocha --recursive --reporter spec --compilers js:babel-register tests",
        "test:watch": "nodemon --exec 'npm run test' tests",
        "coverage": "NODE_ENV=test babel-node ./node_modules/.bin/isparta cover _mocha -- --recursive --reporter spec --compilers js:babel-register tests",
        "validate": "npm run test && npm outdated --depth 0"
    },
    "repository": {
        "type": "git"
    },
    "author": "seq-dev",
    "license": "MIT",
    "dependencies": {
        "babel-core": "^6.18.0",
        "bcrypt": "^0.8.7",
        "body-parser": "^1.15.2",
        "cors": "^2.8.1",
        "errorhandler": "^1.4.3",
        "es6-promise": "^4.0.5",
        "express": "^4.14.0",
        "helmet": "^3.1.0",
        "http-client": "^4.3.1",
        "isomorphic-fetch": "^2.2.1",
        "jsonwebtoken": "^7.1.0",
        "lodash": "^4.16.4",
        "method-override": "^2.3.6",
        "mongoose": "^4.6.5",
        "morgan": "^1.7.0",
        "multer": "^1.2.0"
    },
    "devDependencies": {
        "axios": "^0.15.3",
        "babel-cli": "^6.18.0",
        "babel-eslint": "^7.0.0",
        "babel-preset-es2015": "^6.18.0",
        "babel-register": "^6.18.0",
        "chai": "^3.5.0",
        "chai-http": "^3.0.0",
        "crypto-js": "^3.1.9-1",
        "eslint": "^3.8.1",
        "eslint-plugin-babel": "^4.0.0",
        "express-jwt": "^5.1.0",
        "faker": "^3.1.0",
        "isparta": "^4.0.0",
        "mocha": "^3.1.2",
        "nodemon": "^1.11.0"
    }
}